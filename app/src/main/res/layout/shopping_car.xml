<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".ShoppingCar">


    <ImageView
        android:id="@+id/image_test"
        android:layout_width="409dp"
        android:layout_height="242dp"
        android:src="@color/yellow"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        tools:layout_editor_absoluteY="70dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="301dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tf" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="46dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/todo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/toppng_com_app_icon_set_login_icon_comments_avatar_icon_980x980" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="142dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/rodolfo_de_la_o"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="@string/correo_a01366363_tec_mx"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/saldo_3669_00"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="236dp"
        android:backgroundTint="@color/white"
        android:text="@string/comprar"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/white"
        android:text="@string/historial"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/item_shop_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/yellow_dark"
        android:src="@drawable/ic_baseline_science_24"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_test"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/item_shop_description_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTUDIO 1"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toEndOf="@id/item_shop_1"
        app:layout_constraintTop_toTopOf="@id/item_shop_1"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_1" />


    <TextView
        android:id="@+id/item_shop_description_1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Costo: $ %d M.N"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/item_shop_1"
        app:layout_constraintTop_toBottomOf="@id/item_shop_description_1" />

    <ImageView
        android:id="@+id/item_shop_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/yellow_dark"
        android:src="@drawable/ic_baseline_science_24"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_shop_1"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/item_shop_description_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTUDIO 2"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toEndOf="@id/item_shop_2"
        app:layout_constraintTop_toTopOf="@id/item_shop_2"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_2" />

    <TextView
        android:id="@+id/item_shop_description_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo: $ %d M.N"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/item_shop_2"
        app:layout_constraintTop_toBottomOf="@id/item_shop_description_2"/>

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Finalizar Compra"
        android:shadowColor="@color/white"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/item_shop_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>